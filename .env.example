# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutritheous
DB_USERNAME=nutritheous
DB_PASSWORD=nutritheous

# Google Cloud Storage Configuration
GCS_PROJECT_ID=your-gcp-project-id

# Option 1: Provide credentials as JSON string (Recommended for production/Docker)
GCS_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key_id":"key123","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-sa@project.iam.gserviceaccount.com","client_id":"123","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-sa%40project.iam.gserviceaccount.com"}

# Option 2: Provide file path (For local development only)
# GCS_CREDENTIALS_PATH=backend/src/main/resources/gcp-credentials.json

GCS_BUCKET_NAME=your-bucket-name
GCS_URL_EXPIRY=86400
GCS_IMAGE_URL_EXPIRY=86400
GCS_MAX_IMAGE_SIZE_KB=300

# JWT Configuration
# IMPORTANT: Use a strong random secret (minimum 256 bits / 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-key-minimum-256-bits-required-for-hs256
JWT_EXPIRATION=86400000

# OpenAI Configuration (for AI-powered nutrition analysis)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=800
OPENAI_TIMEOUT=30

# Server Configuration
SERVER_PORT=8081

# Logging
LOG_LEVEL=INFO
SHOW_SQL=false
