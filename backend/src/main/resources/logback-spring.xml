<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Import Spring Boot defaults -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console appender with JSON format for production -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Custom fields for all log entries -->
            <customFields>{"application":"nutritheous","version":"${APP_VERSION:-1.0.0}"}</customFields>

            <!-- Include standard fields -->
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeNonStructuredArguments>false</includeNonStructuredArguments>

            <!-- Field names configuration -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>

            <!-- Add stack trace for errors -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>4096</maxLength>
                <shortenedClassNameLength>30</shortenedClassNameLength>
                <exclude>sun\.reflect\..*</exclude>
                <exclude>net\.sf\.cglib\..*</exclude>
                <exclude>org\.springframework\.cglib\..*</exclude>
                <exclude>\$Proxy.*</exclude>
            </throwableConverter>
        </encoder>
    </appender>

    <!-- Console appender with human-readable format for local development -->
    <appender name="CONSOLE_PLAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for JSON logs (optional, for production) -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/nutritheous.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/nutritheous.%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <!-- Keep 30 days of logs -->
            <maxHistory>30</maxHistory>
            <!-- Max total size of all log files -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"nutritheous","version":"${APP_VERSION:-1.0.0}"}</customFields>
        </encoder>
    </appender>

    <!-- Profile-specific configurations -->

    <!-- Production profile: JSON logging to console and file -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE_JSON"/>
        </root>

        <!-- Set specific log levels for production -->
        <logger name="com.nutritheous" level="INFO"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>

    <!-- Staging profile: JSON logging with more verbose output -->
    <springProfile name="staging">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE_JSON"/>
        </root>

        <logger name="com.nutritheous" level="DEBUG"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
    </springProfile>

    <!-- Development profile: Human-readable console logging -->
    <springProfile name="dev,local,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PLAIN"/>
        </root>

        <logger name="com.nutritheous" level="DEBUG"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    </springProfile>

    <!-- Test profile: Minimal logging -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="CONSOLE_PLAIN"/>
        </root>

        <logger name="com.nutritheous" level="INFO"/>
    </springProfile>

    <!-- Specific logger configurations -->

    <!-- Reduce noise from external libraries -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>

    <!-- Circuit breaker and retry logging -->
    <logger name="io.github.resilience4j" level="INFO"/>

    <!-- Redis logging -->
    <logger name="org.springframework.data.redis" level="INFO"/>

    <!-- Google Cloud Storage logging -->
    <logger name="com.google.cloud" level="INFO"/>

    <!-- OpenAI client logging -->
    <logger name="com.theokanning.openai" level="INFO"/>

</configuration>
